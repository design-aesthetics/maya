{
    "printWidth": 250,
    "singleQuote": true,
    "useTabs": true,
    "tabWidth": 4,
    "plugins": [
        "./node_modules/@shufo/prettier-plugin-blade"
    ],
    "overrides": [
        {
            "files": [
                "*.blade.php"
            ],
            "options": {
                "parser": "blade",
                "tabWidth": 4,
                "phpVersion": "8.0",
                "wrapAttributes": "force-expand-multiline",
                "sortTailwindcssClasses": true,
                "sortHtmlAttributes": "alphabetical"
            }
        }
    ]
}